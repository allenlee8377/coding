import os
import shutil

def copy_files(source_dir, dest_dir, file_list):
    for filename in file_list:
        source_file = os.path.join(source_dir, filename)
        dest_file = os.path.join(dest_dir, filename)
        shutil.copy(source_file, dest_file)
        print(f"复制 {filename} 完成")

def main():
    source_dir = r'C:\Users\allenlee\Desktop\DBtest\html'  # 原文件夹路径
    dest_dir = r'C:\Users\allenlee\Desktop\DBtest\html_A'  # 新文件夹路径

    # 从id.txt中读取文件名列表
    with open(os.path.join(source_dir, 'id.txt'), 'r') as file:
        file_list = [line.strip() for line in file]

    # 确保目标文件夹存在，如果不存在则创建
    if not os.path.exists(dest_dir):
        os.makedirs(dest_dir)

    # 复制文件
    copy_files(source_dir, dest_dir, file_list)

if __name__ == "__main__":
    main()
